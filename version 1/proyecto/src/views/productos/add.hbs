<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <form action="/productos/add" method="POST" name="f1" id="f1">
        <div id="contenedor">
            <label>Codigo</label>
            <input type="text" name="codigo" id="codigo">
        </div>
        <div id="contenedor">
            <label>Nombre del Producto</label>
            <input type="text" name="nombre" id="nombre">
        </div>
        <div id="contenedor">
            <label>Cantidad</label>
            <input type="number" name="cantidad">
        </div>
        <div id="contenedor">
            <label>Tipo de unidad</label>
            <input type="text" name="unidad">
        </div>
        <div id="contenedor">
            <label>Precio</label>
            <input type="number" name="precio">
        </div>
        <button  type="submit" id="guardar">Guardar</button>
    </form>
</body>
<script>
    function inicio() {
        let a = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']
        let d = []
        for (let b = 0; b < 5; b++) {
            let m = a[Math.floor(Math.random() * 26)]
            let n = Math.floor(Math.random() * 26)
            d.push(m)
            d.push(n)
            document.f1.codigo.value = d.join('')
        }
    };
    window.onload = inicio;
</script>

</html>