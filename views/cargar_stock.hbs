  <div class="w3-container w3-purple">
    <h5>LINKEAR VERION 2.0</h5>
  </div>

</body>
<script>
  function codigo() {
    let abecedario = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'Ã±', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z'];
    let array = [];
    for (let i = 0; i < 5; i++) {
      let aletorio = abecedario[Math.floor(Math.random() * 26)];
      let parejar = Math.floor(Math.random() * 26);
      array.push(aletorio);
      array.push(parejar);
      document.f1.codigo.value = array.join('');
    }
  }
   window.onload = codigo;
</script>
